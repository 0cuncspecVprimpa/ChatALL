{
  "name": "chatall",
  "version": "0.1.0",
  "description": "Chat with multiple AI bots and discover the best.",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "author": "Sunner",
  "license": "Apache-2.0",
  "dependencies": {},
  "devDependencies": {
    "electron": "^24.0.0",
    "electron-builder": "^23.6.0"
  },
  "build": {
    "appId": "ai.chatall",
    "productName": "ChatALL",
    "directories": {
      "buildResources": "assets"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    }
  }
}